{
  "name": "@escrin/nftrout-worker",
  "type": "module",
  "scripts": {
    "lint:prettier": "prettier --check --cache '*.json' 'src/**/*.ts'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --cache '*.json' 'src/**/*.ts'",
    "format": "npm-run-all format:**",
    "build:typecheck": "tsc -b",
    "build:bundle": "esbuild --bundle src/main.ts --outfile=bin/nftrout --minify --target=es2022 --format=esm",
    "build": "npm-run-all --parallel build:**",
    "watch:bundle": "esbuild --bundle src/main.ts --outfile=bin/nftrout --target=es2022 --format=esm --watch",
    "test": "jest"
  },
  "platforms": {
    "pnpm": ">=7",
    "node": ">=20"
  },
  "dependencies": {
    "@escrin/nftrout-evm": "link:../evm",
    "@escrin/runner": "link:/home/nhynes/escrin/escrin/runner",
    "@oasisprotocol/deoxysii": "^0.0.5",
    "canonicalize": "^2.0.0",
    "ethers": "^6.6.7",
    "nft.storage": "^7.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "esbuild": "^0.18.17",
    "jest": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6"
  }
}
