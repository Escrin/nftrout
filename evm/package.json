{
  "private": true,
  "name": "@escrin/nftrout-evm",
  "license": "MIT",
  "type": "module",
  "module": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "files": [
    "contracts",
    "deployments",
    "lib",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./lib/src/index.js"
    },
    "./deployments/sapphire-testnet": {
      "import": "./deployments/sapphire-testnet/NFTrout.json"
    },
    "./deployments/sapphire-mainnet": {
      "import": "./deployments/sapphire/NFTrout.json"
    }
  },
  "scripts": {
    "lint:prettier": "prettier --check --plugin=prettier-plugin-solidity --cache '*.json' '{deploy,test}/**/*.{cjs,ts}' 'contracts/**/*.sol'",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --plugin=prettier-plugin-solidity --cache '*.json' '{deploy,test}/**/*.{cjs,ts}' 'contracts/**/*.sol'",
    "dangerous:format:solhint": "solhint --fix 'contracts/**/*.sol'",
    "format": "npm-run-all format:**",
    "build:contracts": "hardhat compile",
    "build:lib": "tsc -b",
    "build": "npm-run-all build:contracts build:lib",
    "test": "hardhat test",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "chai": "^4.3.10",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.2",
    "hardhat-deploy": "^0.11.44",
    "hardhat-deploy-ethers": "0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@escrin/evm": "1.0.0-beta.4",
    "@oasisprotocol/sapphire-contracts": "^0.2.5",
    "@openzeppelin/contracts": "^4.9.5",
    "erc721a": "^4.2.3"
  }
}
