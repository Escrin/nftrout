{
  "private": true,
  "name": "@escrin/nftrout-evm",
  "license": "MIT",
  "type": "module",
  "module": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "files": [
    "contracts",
    "deployments",
    "lib",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./lib/src/index.js"
    },
    "./deployments/sapphire-testnet": {
      "import": "./deployments/sapphire-testnet/NFTrout.json"
    },
    "./deployments/sapphire-mainnet": {
      "import": "./deployments/sapphire/NFTrout.json"
    }
  },
  "scripts": {
    "lint:prettier": "prettier --check --plugin-search-dir=. --cache '*.json' '{deploy,test}/**/*.ts' 'contracts/**/*.sol'",
    "lint:solhint": "solhint 'contracts/**/*.sol'",
    "lint": "npm-run-all lint:**",
    "format:prettier": "prettier --write --plugin-search-dir=. --cache '*.json' '{deploy,test}/**/*.ts' 'contracts/**/*.sol'",
    "format:solhint": "solhint --fix 'contracts/**/*.sol'",
    "format": "npm-run-all format:**",
    "build:contracts": "hardhat compile",
    "build:lib": "tsc -b",
    "build": "npm-run-all build:contracts build:lib",
    "test": "hardhat test",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "ethers": "^6.6.7",
    "hardhat": "^2.17.0",
    "hardhat-deploy": "^0.11.34",
    "hardhat-deploy-ethers": "0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@escrin/evm": "1.0.0-beta.5",
    "@oasisprotocol/sapphire-contracts": "^0.2.3",
    "@openzeppelin/contracts": "^4.9.3",
    "erc721a": "^4.2.3"
  }
}
