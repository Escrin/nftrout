{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "files": ["src/index.ts"],
  "include": [
    "typechain/common.ts",
    "abi/NFTMinter.json",
    "abi/LilypadCaller.json",
    "abi/ERC721Upgradeable.json",
    "typechain/src/NFTMinter.ts",
    "typechain/src/LilypadCaller.ts",
    "typechain/factories/src/NFTMinter__factory.ts"
  ]
}
